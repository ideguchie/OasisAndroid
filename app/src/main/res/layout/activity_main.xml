<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/oasis">

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Locations"
        android:id="@+id/buttonLocations"
        android:onClick="openLocation"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/buttonAbout"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/buttonMenu"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/buttonLocations"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:onClick="openMenu" />

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Specials"
        android:id="@+id/buttonSpecials"
        android:layout_below="@+id/buttonMenu"
        android:background="@drawable/custombutton"
        android:layout_alignLeft="@+id/buttonMenu"
        android:layout_alignStart="@+id/buttonMenu"
        android:layout_marginBottom="15dp"
        android:onClick="openSpecials" />

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Stamp Card"
        android:id="@+id/buttonStamp"
        android:background="@drawable/custombutton"
        android:layout_below="@+id/buttonSpecials"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/buttonAbout"
        android:background="@drawable/custombutton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="openAbout" />

</RelativeLayout>
